<div class="main">
    <h1 class="head">{{course}}</h1>
    <div class="buttons">
        {{#each data}}
        <div class="but">
        {{#if ../admin}}
        <a href="/delete/{{this._id}}" class="delete"><i class="far fa-trash-alt"></i></a>
        <a href="/edit/{{this._id}}" class="edit"><i class="far fa-edit"></i></a>
        {{/if}}
        <a href="/{{../course}}/{{this.name}}"> {{this.name}} </a>
        </div>
        {{/each}}
    </div>
    <a href="/add{{course}}" class="add btn btn-success mt-5"> Add Semester </a>
</div>


