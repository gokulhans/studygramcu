<form action="/editupload" method="post">
  <br class="form-group">
    <h5>Edit Item</h5>
    <br>
    <h6>Item Name</h6>
    <input type="text" name="name" class="form-control mt-3" value="{{upload.name}}">
    <br>
    <h6>Item Link</h6>
    <input type="url" name="link" class="form-control mt-3" value="{{upload.link}}">
    <input type="text" name="id" class="form-control mt-3" value="{{upload._id}}" hidden>
    <input type="text" name="item" value="{{parameter}}" hidden>
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>